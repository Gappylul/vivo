server tcp ":9001" {
    on connect {
        log("Client connected: $client.reverse()")
        send("Welcome to Vivo!")
    }
    on message {
        log("Received: $message")
        send("Original: $message")
        send($message.reverse())
        send($message.upper())
    }
    on disconnect {
        log("Client $client disconnected")
    }
}